#include <iostream>
using namespace std;
int main() {
    int x, n;
    char ba='F';
    int mitad;
    
    cout << "Numero que quiero buscar:" << endl;
    cin >> x;
    cout << "Ingrese la cantidad de numeros:" << endl;
    cin >> n;
    int num[n];
    cout << "Ingresa los numeros de manera ascendente:" << endl;
    for (int i = 0; i < n; i++) {
        cin >> num[i];
    }
    if (num[0] == x) {
        cout << "Esta en el indice 0" << endl;
        return 0;
    }
    // BÃºsqueda exponencial
    int i = 1;
    while (i < n && num[i] <= x) {
        i *= 2;
    }
    int sup = min(i, n - 1);
    int inf = i / 2;

    // BÃºsqueda binaria
    while (inf <= sup) {
        mitad = (inf+sup) / 2;
        if (num[mitad]==x){
            ba='V';
            break;
        }
        if(num[mitad]>x){
            sup=mitad;
            mitad=(inf+sup) / 2;
        }
        if(num[mitad]<x){
            inf=mitad;
            mitad = (inf+sup) / 2;
        }
        
    }
    if (ba == 'V') {
        cout << "Indice: " << mitad << endl;
    } else {
        cout << "Numero no encontrado" << endl;
    }
    return 0;
}
